<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username %>
    <%= f.input :full_name %>
    <%= f.input :twitter_name %>
    <%= f.input :github_name %>
    <%= f.input :url %>
    <%= f.input :avatar_image_name %>
    <%= f.input :bio, :input_html => {cols: 80, rows: 14}%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
